<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
    </session-config>

    <servlet>
        <servlet-name>createWalletController</servlet-name>
        <servlet-class>com.dev.xrpwebtools.Controller.createWalletController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createWalletController</servlet-name>
        <url-pattern>/process.walletcreation</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dashboardController</servlet-name>
        <servlet-class>com.dev.xrpwebtools.Controller.dashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboardController</servlet-name>
        <url-pattern>/process.dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>performXRPTransactionController</servlet-name>
        <servlet-class>com.dev.xrpwebtools.Controller.performXRPTransactionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>performXRPTransactionController</servlet-name>
        <url-pattern>/process.xrptransaction</url-pattern>
    </servlet-mapping>
</web-app>