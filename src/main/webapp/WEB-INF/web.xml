<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>
    <servlet>
        <servlet-name>createWalletController</servlet-name>
        <servlet-class>com.dev.xrpwebtools.controller.xrpl.CreateWallet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createWalletController</servlet-name>
        <url-pattern>/process.walletcreation</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>com.dev.xrpwebtools.controller.Dashboard</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/process.dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>sendXRPController</servlet-name>
        <servlet-class>com.dev.xrpwebtools.controller.xrpl.SendXRP</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendXRPController</servlet-name>
        <url-pattern>/process.sendxrp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createNFTWalletController</servlet-name>
        <servlet-class>com.dev.xrpwebtools.controller.xrpl.CreateNFTWallet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNFTWalletController</servlet-name>
        <url-pattern>/process.nftcreation</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dashboardXUMMController</servlet-name>
        <servlet-class>com.dev.xrpwebtools.controller.xrpl.dashboardXUMMController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboardXUMMController</servlet-name>
        <url-pattern>/process.dashboardxumm</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>httpHeaderSecurity</filter-name>
        <filter-class>org.apache.catalina.filters.HttpHeaderSecurityFilter</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>hstsEnabled</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>hstsIncludeSubDomains</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>antiClickJackingEnabled</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>antiClickJackingOption</param-name>
            <param-value>DENY</param-value>
        </init-param>
        <init-param>
            <param-name>blockContentTypeSniffingEnabled</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>xssProtectionEnabled</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>httpHeaderSecurity</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <listener>
        <listener-class>org.quartz.ee.servlet.QuartzInitializerListener</listener-class>
    </listener>
</web-app>